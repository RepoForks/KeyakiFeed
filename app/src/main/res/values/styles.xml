<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="Theme.AppTheme.TranslucentStatusBar" parent="Theme.AppCompat.Light.NoActionBar">
    </style>

    <style name="PermissionRequireActivity" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowEnterAnimation">@null</item>
        <item name="android:windowExitAnimation">@null</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <!-- Common -->
    <style name="ProfileImageViewStyle">
        <item name="android:src">@drawable/ic_account_circle_black_48dp</item>
    </style>
    <style name="ProfileImageViewStyle.Small" parent="ProfileImageViewStyle">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
    </style>
    <style name="ProfileImageViewStyle.Medium" parent="ProfileImageViewStyle">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
    </style>
    <style name="ProfileImageViewStyle.Large" parent="ProfileImageViewStyle">
        <item name="android:layout_width">72dp</item>
        <item name="android:layout_height">72dp</item>
    </style>

    <!-- use MemberDetailHeader.java -->
    <style name="MemberDetailHeader.TextView.Properties" parent="MemberDetailHeader.TextView">
        <item name="android:textColor">@color/green_900</item>
        <item name="android:textSize">14dp</item>
    </style>

    <style name="MemberDetailHeader.TextView.Name.Main" parent="MemberDetailHeader.TextView.Name">
        <item name="android:textSize">18dp</item>
    </style>
    <style name="MemberDetailHeader.TextView.Name.Sub" parent="MemberDetailHeader.TextView.Name">
        <item name="android:textSize">16dp</item>
    </style>
    <style name="MemberDetailHeader.TextView.Name" parent="MemberDetailHeader.TextView">
        <item name="android:textColor">@color/green_100</item>
    </style>

    <style name="MemberDetailHeader.TextView" parent="android:Widget.TextView">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <!-- blog update notification style -->
    <style name="NotificationText" parent="android:TextAppearance.StatusBar.EventContent" />
    <style name="NotificationTitle" parent="android:TextAppearance.StatusBar.EventContent.Title" />

    <style name="FabMargin">
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_marginBottom">0dp</item>
    </style>

    <style name="menu_labels_style">
        <item name="android:background">@drawable/fab_label_background</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>
